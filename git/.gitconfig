[include]
    path = ~/.gitconfig-private

[push]
    default = simple

[pull]
    rebase = false

[credential]
    helper = store --file ~/.git-credentials

[diff]
    tool = nvimdiff

[merge]
    tool = vimmdiff

[difftool]
    prompt = true

[difftool "nvimdiff"]
    cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""

[core]
    editor = vim

[alias]
    dt = difftool
